<%- include("layouts/header.ejs") %>
<div class="container text-center py-5">
  <h1 class="my-2">Crear publicacion</h1>

  <div class="row g-6">
    <form action="/crear" method="post" class="py-4">
      <div class="mb-3">
        <label for="titulo" class="form-label">Titulo</label>
        <input type="text" class="form-control" id="titulo" name="titulo" />
      </div>

      <div class="mb-3">
        <label for="texto" class="form-label">Escriba aqui</label>
        <textarea
          class="form-control"
          id="texto"
          name="texto"
          style="height: 400px"
        ></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Crear</button>
    </form>
  </div>
</div>
